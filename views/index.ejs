<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Webchat</title>
</head>
<body>
  <nav>
    <h1 class="text-center"><span>WEBCHAT</span></h1>
  </nav>
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-sm-7 border rounded-3 bg-light">
        <ul id="messages">
          <% messages.forEach((message) => { %>
            <li data-testid="message"><%= message %></li>
          <% }) %>
        </ul>
      </div>
      <div class="col-sm-4 border rounded-3 bg-light">
        <div class="input-group mb-3">
          <input data-testid="nickname-box" type="text" class="form-control" placeholder="nickname" id="nickname-input">
          <button data-testid="nickname-button" class="btn btn-outline-secondary" type="button" id="nickname-button">Salvar</button>
        </div>
        <ul id="online-users">
        </ul>
      </div>
    </div>

    <div class="input-group mb-3">
      <input data-testid="message-box" type="text" class="form-control" placeholder="mensagem"  id="input-message">
      <button data-testid="send-button" class="btn btn-outline-secondary" type="button" id="send-message">Enviar</button>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</body>
</html>