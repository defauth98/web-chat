<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="http://localhost:3000/socket.io/socket.io.js"></script> <!-- O pacote socket.io cria esse arq -->
  <title>Project Chat</title>
</head>
<body>
  <h1>Project Chat</h1>

  <ul id="message">
    <% notifications.forEach((notification) => { %>
      <li><%= notification %></li>
    <% }) %>
  </ul>
</div>
<div>
  <form>
    <input
      data-testid="nickname-box"
      type="text"
      placeholder="Digite seu nickname"
      autocomplete="off"
    />
    <button data-testid="nickname-button">
      Salvar nickname
    </button>
  </form>
  <form>
    <input
      data-testid="message-box"
      type="text"
      name="message-box"
      placeholder="Digite sua mensagem"
      autocomplete="off"
    />
    <button type="button" data-testid="send-button">
      Enviar
    </button>
  </form>

</div>

  <script src='/client.js'>
    

  </script>
</body>
</html>